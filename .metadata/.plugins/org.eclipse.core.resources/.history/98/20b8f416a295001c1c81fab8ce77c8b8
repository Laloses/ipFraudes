package com.ibm.academia.restapi.ipfraude.clientes;

import java.util.HashMap;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;

import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryDTO;

@FeignClient(name = "api-ip2country", url = "${ip2country.url}" )
public interface Ip2CountryRest{
	@GetMapping(path = "/", consumes =  "application/json")
	public HashMap<String, String> findCountryByIP(@RequestParam String ip);
}