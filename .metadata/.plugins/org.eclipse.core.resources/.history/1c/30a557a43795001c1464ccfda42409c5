package com.ibm.academia.restapi.ipfraude.modelo.mapper;

import java.util.HashMap;

import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryDTO;
import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryLayerDTO;

public class CountryLayerMapper {
	
	public static CountryLayerDTO mapCountryFromLayer(HashMap<String, Object> countryObject) {
		CountryLayerDTO countryLayerDTO = new CountryLayerDTO();
		countryLayerDTO.setNombre((String)countryObject.get("nombre"));
		HashMap<String, Object> currencies =  (HashMap<String, Object>) countryObject.get("currencies");
		countryLayerDTO.setMoneda((String)currencies.get("moneda"));
		countryLayerDTO.setCotizacion((String)currencies.get("cotizacion"));
		return countryLayerDTO;
	}
}
