package com.ibm.academia.restapi.ipfraude.modelo.mapper;

import java.util.Map;

import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryDTO;
import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryLayerDTO;
import com.ibm.academia.restapi.ipfraude.modelo.dto.FixerDTO;
import com.ibm.academia.restapi.ipfraude.modelo.dto.Ip2CountryDTO;

public class FixerMapper {
	
	public static FixerDTO mapWithCoin(Map<String, Object> response, String coin) {
		FixerDTO countryDTO = new FixerDTO();
		countryDTO.setCotizacion((String)((Map<String,String>)response.get("rates")).get(coin));
		return countryDTO;
	}
}
