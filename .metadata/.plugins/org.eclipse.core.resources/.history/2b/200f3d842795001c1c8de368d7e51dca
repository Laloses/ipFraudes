package com.ibm.academia.restapi.ipfraude.clientes;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryDTO;

@FeignClient(name = "api-productos")
public interface Ip2CountryRest{
	@GetMapping("/api/v1/rest-productos/producto/ver-detalle/productoId/{ip}")
	public CountryDTO findCountryByIP(@PathVariable String ip);
}