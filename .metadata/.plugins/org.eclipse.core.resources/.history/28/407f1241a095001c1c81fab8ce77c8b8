package com.ibm.academia.restapi.ipfraude.clientes;

import java.util.HashMap;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryDTO;

@FeignClient(name = "api-ip2country", url = "https://api.ip2country.info" )
public interface Ip2CountryRest{
	@GetMapping("/{ip}")
	public HashMap<String, String> findCountryByIP(@PathVariable String ip);
}