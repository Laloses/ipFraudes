package com.ibm.academia.restapi.ipfraude.clientes;

import java.util.HashMap;
import java.util.Optional;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;

import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryDTO;
import com.ibm.academia.restapi.ipfraude.modelo.dto.Ip2CountryDTO;

@FeignClient(name = "api-ip2country", url = "${ip2country.url}" )
public interface Ip2CountryRest{
	@GetMapping(path = "/", consumes =  "application/json", produces = "application/json")
	public Optional<Ip2CountryDTO> findCountryByIP(@RequestParam String ip);
}