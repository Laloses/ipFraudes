package com.ibm.academia.restapi.ipfraude.modelo.mapper;

import java.util.Map;

import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryDTO;
import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryCoinDTO;
import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryRateDTO;
import com.ibm.academia.restapi.ipfraude.modelo.dto.Ip2CountryDTO;

public class FixerMapper {
	
	public static CountryRateDTO mapWithCoin(Map<String, String> rates, String coin) {
		CountryRateDTO countryDTO = new CountryRateDTO();
		countryDTO.setCotizacion(rates.get(coin));
		return countryDTO;
	}
}
