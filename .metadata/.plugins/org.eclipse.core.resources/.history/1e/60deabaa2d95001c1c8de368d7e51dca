package com.ibm.academia.restapi.ipfraude.clientes;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryDTO;

@FeignClient(name = "api-productos")
public interface CountryLayerRest{
	@GetMapping("/api/v1/rest-productos/producto/ver-detalle/productoId/{code3}")
	public HashMap<String, Object> findCountryByCode3(@PathVariable String code3);
}