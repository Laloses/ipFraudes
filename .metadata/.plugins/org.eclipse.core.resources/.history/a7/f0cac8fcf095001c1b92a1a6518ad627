package com.ibm.academia.restapi.ipfraude.clientes;

import java.util.Optional;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.ibm.academia.restapi.ipfraude.modelo.dto.CountryLayerDTO;

@FeignClient(name = "api-countrylayer", url = "${ip2country.url}")
public interface CountryLayerRest{
	@GetMapping("/alpha/{code}")
	public Optional<CountryLayerDTO> findCountryByCode3(@PathVariable(name="code") String code3);
}